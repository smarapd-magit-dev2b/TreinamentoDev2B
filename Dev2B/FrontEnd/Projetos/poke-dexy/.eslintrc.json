{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended",
    "airbnb",
    "prettier"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "react/prefer-stateless-function": [
      "off",
      { "ignorePureComponents": true }
    ],
    "react/forbid-prop-types": [
      "off",
      {
        "forbid": false,
        "checkContextTypes": false,
        "checkChildContextTypes": false
      }
    ]
  }
}
